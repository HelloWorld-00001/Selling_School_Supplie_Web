
	<div class="container">
		{{#if isNull}}
			<div> Không tìm thấy sản phẩm</div>
		{{else}}
		<div class="float-center mb-5 row">
			 <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <a class="navbar-brand" href="#">Filter</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                <li class="nav-item active">
                    <a class="nav-link" href="#">Default<span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/search/price?Name={{this.name}}">Price</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/search/rate?Name={{this.name}}">Rating</a>
                </li>
                </ul>
            </div>
            </nav>
			</div>
		<div class="row  mt-3">
			
        

				{{#each this.product}}
			<div class="col-6 col-lg-3 ftco-animate ">
				
				<div class="product card h-100">
					<a href="#" class="img-prod"><img class="img-fluid" src="{{Image}}" alt="Colorlib Template">
						{{#if Discount}}
						<span class="status">{{Discount}}%</span>
						{{/if}}
						<div class="overlay"></div>
					</a>
					<div class="text py-3 pb-4 px-3 text-center">
						<h3><a href="#">{{ProductName}}</a></h3>
						<div class="d-flex">
							<div class="pricing">
								{{#if Discount }}
								<p class="price"><span class="mr-2 price-dc">{{formatNumber Price}}</span><span
										class="price-sale">{{discountPrice Price Discounts}}</span></p>

								{{else}}
								<p class=""><span class="mr-2 price-dc">{{formatNumber Price}}</span></p>

								{{/if}}
							</div>
						</div>
						<div class="bottom-area d-flex px-3">
							<div class="m-auto d-flex">
								<a href="#"
									class="add-to-cart d-flex justify-content-center align-items-center text-center">
									<span><i class="ion-ios-menu"></i></span>
								</a>
								<a href="#" class="buy-now d-flex justify-content-center align-items-center mx-1">
									<span><i class="ion-ios-cart"></i></span>
								</a>
								<a href="#" class="heart d-flex justify-content-center align-items-center ">
									<span><i class="ion-ios-heart"></i></span>
								</a>
							</div>
						</div>
					</div>
				</div>
			</div>
			{{/each }}
			{{/if}}
			
		</div>
	</div>
