<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto">
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
<link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
<link rel="stylesheet" href="../css/customColor.css">
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

<script>
    $(document).ready(function () {
        $('[data-toggle="tooltip"]').tooltip();
    });
</script>
</head>

<body>

    <section class="pcoded-main-container">
        <div class="pcoded-wrapper">

            <div class="card container-fluid py-5 px-5 ml-3" style="font-size:20px">

                <div class="row container-fluid ">
                    <div class="col-sm-7">
                        <h2><b>Products List</b></h2>
                    </div>

                    <div class="justify-content-end">
                        <a name="" id="" class="btn  btn-outline-success" href="/admin/add" role="button">
                            <i class="fa fa-plus mr-1" aria-hidden="true"> Add category</i>
                        </a>
                    </div>
                </div>
            <table class="table table-striped table-hover table-bordered">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Name</i></th>
                        <th>Price</th>
                        <th>Quantity<i class="fa fa-sort"></i></th>
                        <th >Short Description </th>
                        <th>Rate<i class="fa fa-sort"></i></th>
                        <th>Like<i class="fa fa-sort"></i></th>
                        <th>CatID</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>

                    {{#each this.product}}
                    <form method="post" action="/admin/del">
                        <tr>
                            <td>{{ProductID}}</td>
                            <td>{{subString ProductName}}</td>
                            <td>{{formatNumber Price}}</td>
                            <td>{{Quantity}}</td>
                            <td>{{subString TinyDes}}</td>
                            <td>{{AvgRate}}</td>
                            <td>{{TotalLike}}</td>
                            <td>{{CatID}}</td>
                            <td>
                                <a href="#" class="view" title="View" data-toggle="tooltip"><i
                                        class="material-icons">&#xE417;</i></a>
                                <a href="/admin/update?id={{ProductID}}" class="edit" title="Update" data-toggle="tooltip"><i
                                        class="material-icons">&#xE254;</i></a>
                                <input type="hidden" class="form-control" id="CatId" name="productID" readonly
                                    value="{{ProductID}}">
                                <button type="submit" class="btn btn-danger">Delete<i
                                        class="material-icons">&#xE872;</i></button>
                            </td>
                        </tr>
                    </form>
                    {{/each}}
                </tbody>
            </table>
            <div class="clearfix">
                <div class="hint-text">Showing <b>5</b> out of <b>25</b> entries</div>
                <ul class="pagination">
                    <li class="page-item disabled"><a href="#"><i class="fa fa-angle-double-left"></i></a></li>
                    <li class="page-item"><a href="#" class="page-link">1</a></li>
                    <li class="page-item"><a href="#" class="page-link">2</a></li>
                    <li class="page-item active"><a href="#" class="page-link">3</a></li>
                    <li class="page-item"><a href="#" class="page-link">4</a></li>
                    <li class="page-item"><a href="#" class="page-link">5</a></li>
                    <li class="page-item"><a href="#" class="page-link"><i class="fa fa-angle-double-right"></i></a>
                    </li>
                </ul>
            </div>
        </div>
        </div>
</section>

        <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>
</body>

</html>